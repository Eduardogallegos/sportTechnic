<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightShades"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:layout_margin="4dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvGrupo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgGrupo"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:srcCompat="@android:drawable/arrow_up_float"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tvGrupo"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgGrupo"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:text="Titulo"
            android:textColor="@color/lightShades"/>

        <TextView
        android:id="@+id/tvDescripcionGrupo"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:text="Descripcion"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
            android:layout_below="@+id/imgGrupo"
        />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>